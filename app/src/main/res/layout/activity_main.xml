<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/s_bg_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:transitionName="bg_image" />

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="70dp"
                android:paddingRight="50dp"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:transitionName="logo_image"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/logoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:fontFamily="@font/autour_one"
                android:maxLines="2"
                android:text="CookBook"
                android:padding="20dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#AC8B63"
                android:textSize="40sp"
                android:textStyle="bold"
                android:transitionName="logo_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/athiti_medium"
                android:text="Book of Recipes"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#AC8B63"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/athiti_medium"
                        android:gravity="bottom"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:transitionName="logo_text" />

                    <TextView
                        android:id="@+id/main_appInfo_curren_verion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="50dp"
                        android:fontFamily="@font/athiti_medium"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#AC8B63"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>