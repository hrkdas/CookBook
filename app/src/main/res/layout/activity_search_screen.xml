<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/theme_brown"
    android:layout_height="match_parent"
    tools:context=".search_screen">

    <LinearLayout
        android:id="@+id/searchscreen_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overview_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#F3F3F3"
                android:elevation="30dp"
                android:transitionName="searchbar_transition"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="15dp"
                    android:text="Search recipes here"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="15dp"
                    android:padding="5dp"
                    android:src="@drawable/search_icon" />

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/searchByIngre_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/mintgreen"
            android:fontFamily="@font/abel"
            android:text="Search By Ingredients"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:icon="@drawable/ingredient_search_icon"
            app:iconGravity="end"
            app:rippleColor="#4ECD5B" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="end|center"
            android:scaleType="centerInside"
            android:src="@drawable/searchscreen_banner" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/searchscreen_image_1" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/searchscreen_image_2" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="5dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/searchscreen_image_3" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                android:layout_marginLeft="20dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/searchscreen_image_4" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/searchscreen_image_5" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                android:layout_marginRight="20dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/searchscreen_image_6" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/searchscreen_image_7" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/searchscreen_image_8" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                android:layout_marginRight="20dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/searchscreen_image_9" />

            </com.google.android.material.card.MaterialCardView>


        </GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>